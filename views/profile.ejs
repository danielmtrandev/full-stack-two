<!doctype html>
<html>

<head>
  <title>Daily Water Intake</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <a href="/logout" class="btn btn-default btn-sm">Logout</a>

    <section>
    <h1>Daily Water Intake</h1>

      <form action="/messages" method="POST">
        <label for="time">Time:</label>
        <input type="time" id="timeOfDrink" name="time">
        <input id='date' type='date' value="" name='date' hidden>
        <p>Current Date is <span class="todayDate"></span>.</p>
        <label for="AmoutOfWater">How much water did you drink? </label>
        <input type="range" name="waterAmount" id="waterAmount" min="0" max="15" step="1" value="15">
        <output class="price-output" for="price"></output>
        <button type="submit">Submit</button>
      </form>
    </section>
    <section>
      <h3></h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].time %></span>
              <span><%= messages[i].waterAmount %></span>
              <span><i class="fa fa-trash" id="<%= messages[i]._id %>"></i></span>
            </li>
          <% } %>
          </ul>
    </section>

    <script src="main.js"></script>
    <script src="https://kit.fontawesome.com/c0e668a8ad.js" crossorigin="anonymous"></script>

</body>

</html>